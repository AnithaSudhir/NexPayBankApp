<form name="addBankDetail" novalidate>
    <div style="width: 50%; margin: 50px auto;">

        <table id="BankDetails" ng-form name="myForm">
            <tr>
                <td>
                    <strong>Account name:</strong>
                </td>
                <td>
                    <input type="text" class="form-control" ng-model="BankModel.AccountName" placeholder="Account name is required" required />
                </td>
            </tr>
            <tr>
                <td>
                    <strong>BSB:</strong>

                </td>
                <td>
                    <input type="number" class="form-control" ng-model="BankModel.BSB" name="BSB" placeholder="BSB is required" ng-maxlength="6" required/>
                    <span class="error" ng-show="myForm.myInput.$error.maxlength">Too long!</span>
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Account Number</strong>

                </td>
                <td>
                    <input type="number" class="form-control" ng-model="BankModel.AccountNumber" placeholder="Account number is required" ng-maxlength="8" required />
                </td>
            </tr>
            <tr>
                <td>
                    <strong>Reference:</strong>

                </td>
                <td>
                    <input type="text" class="form-control" ng-model="BankModel.Reference" placeholder="Reference" />
                </td>
            </tr>

            <tr>
                <td>
                    <strong>Amount:</strong>

                </td>
                <td>
                    <input type="number" class="form-control" ng-model="BankModel.PaymentAmount" placeholder="Amount is required" required/>
                </td>
            </tr>
            <br />
            <tr>
                <td>
                    &nbsp;&nbsp;&nbsp;&nbsp;
                </td>
                <td>
                    <button type="button" ng-click="AddBankAccount();" ng-disabled="!addBankDetail.$valid" class="btn btn-primary">Save</button>
                </td>
            </tr>

        </table>
    </div>
    <hr style="color: black" />
    </form>

    <div style="width: 50%; margin: 50px auto;">
        <div class="panel panel-default">
            <!-- Default panel contents -->
            <div class="panel-heading"><b>Bank Details </b></div>
            <div class="table-responsive">
                <table id="BankDetailsTable" class="table table-striped table-bordered table-hover table-condensed">
                    <thead>
                        <tr>
                            <th>Account Name</th>
                            <th>BSB</th>
                            <th>Account Number</th>
                            <th>Reference</th>
                            <th>Payment Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr data-ng-repeat="bankitem in BankDetailsList">

                            <td>{{bankitem.AccountName}}</td>
                            <td>{{bankitem.BSB}}</td>
                            <td>{{bankitem.AccountNumber}}</td>
                            <td>{{bankitem.Reference}}</td>
                            <td>{{bankitem.PaymentAmount}}</td>

                        </tr>

                        @*<tr ng-if="states.NewRow">*@
                        <tr ng-if="BankDetailsList.length == 0">
                            <td class="text-center" colspan="4">
                                There are no bank details to display
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
       
    </div>

    <hr />
